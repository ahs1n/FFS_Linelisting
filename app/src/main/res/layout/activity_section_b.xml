  <layout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto">

      <data>

          <import type="android.view.View" />

          <!--        <variable
                      name="form"
                      type="edu.aku.hassannaqvi.ffs_linelisting.models.Form" />-->

          <variable
            name="callback"
            type="edu.aku.hassannaqvi.ffs_linelisting.ui.sections.SectionBActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CUSTOM TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/CustomToolbarTheme"
            app:popupTheme="@style/CustomPopupTheme"
            app:subtitleTextAppearance="@style/Toolbar.SubtitleText"
            app:title="@string/listitle"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

        <androidx.cardview.widget.CardView
            android:id="@+id/fldGrpCVhh20"
            style="@style/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hhid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/redLight"
                    android:fontFamily="@font/allerta_stencil"
                    android:gravity="center"
                    android:text="1010-234"
                    android:textColor="@color/white"
                    android:textSize="56sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/GrpName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- hh07  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVhh07"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_hh07" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/hh07" />
                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/hh07"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/hh0701"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0701" />

                            <RadioButton
                                android:id="@+id/hh0702"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0702" />

                            <RadioButton
                                android:id="@+id/hh0703"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0703" />

                            <RadioButton
                                android:id="@+id/hh0704"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0704" />

                            <RadioButton
                                android:id="@+id/hh0705"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0705" />

                            <RadioButton
                                android:id="@+id/hh0706"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0706" />

                            <RadioButton
                                android:id="@+id/hh0707"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0707" />

                            <RadioButton
                                android:id="@+id/hh0708"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0708" />

                            <RadioButton
                                android:id="@+id/hh0709"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0709" />

                            <RadioButton
                                android:id="@+id/hh0710"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0710" />

                            <RadioButton
                                android:id="@+id/hh0711"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0711" />

                            <RadioButton
                                android:id="@+id/hh0712"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0712" />

                            <RadioButton
                                android:id="@+id/hh0713"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0713" />

                            <RadioButton
                                android:id="@+id/hh0714"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0714" />

                            <RadioButton
                                android:id="@+id/hh0715"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0715" />

                            <RadioButton
                                android:id="@+id/hh0716"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0716" />

                            <RadioButton
                                android:id="@+id/hh0717"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0717" />

                            <EditText
                                android:id="@+id/hh0717x"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz0123456789,. "
                                android:hint="@string/hh0717"
                                android:tag="hh0717"
                                android:text='@{hh0717.checked ? hh0717x.getText().toString() : ""}'
                                android:visibility='@{hh0717.checked? View.VISIBLE : View.GONE}' />

                            <RadioButton
                                android:id="@+id/hh0718"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0718" />

                            <RadioButton
                                android:id="@+id/hh0719"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hh0719" />
                        </RadioGroup>
                    </LinearLayout>

                </androidx.cardview.widget.CardView><!-- hh07  Radio   -->


                <!-- hh08  Input   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVhh08"
                    style="@style/cardView"
                    android:visibility='@{hh0701.checked||hh0718.checked||hh0719.checked? View.GONE : View.VISIBLE}'>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_hh08" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/hh08" />
                        </LinearLayout>

                        <EditText
                            android:digits="AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz "
                            android:id="@+id/hh08"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hh08" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- hh09  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVhh09"
                    android:visibility="@{hh0701.checked &amp;&amp; !hh0718.checked &amp;&amp; !hh0719.checked ?View.VISIBLE:View.GONE}"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_hh09" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/hh09" />
                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/hh09"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/hh0901"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/hh0801" />

                            <RadioButton
                                android:id="@+id/hh0902"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/hh0802" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- hh10  Input-Numeric   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVhh10"
                    style="@style/cardView"
                    android:visibility="@{hh0901.checked?View.VISIBLE:View.GONE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_hh10" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/hh10" />
                        </LinearLayout>

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/hh10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hh10"
                            android:inputType="number"
                            android:maxLength="3"
                            app:maxValue="100"
                            app:minValue="2"
                            app:type="range" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!--EndButton LinearLayout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_End"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@color/redOverlay"
                        android:onClick="btnEnd"
                        android:text="Cancel"
                        android:visibility="gone"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_Continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@color/greenLight"
                        android:onClick="btnContinue"
                        android:text="Continue to next"
                        android:textColor="@color/white" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>